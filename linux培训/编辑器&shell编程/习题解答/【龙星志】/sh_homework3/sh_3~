#!/bin/sh

if [ $# -ge 3 ]
then
	i=2
	min=$1
	max=$1
	tsum=$1
	while [ $i -le $# ]
	do
		eval cur=\$$i
		echo $cur
		if [ $cur -gt $max ]
		then
			max=$cur
		fi
		if [ $cur -lt $min ]
		then
			min=$cur
		fi
		let "tsum=$tsum+$cur"
		let "i+=1"
	done
	aver=`echo "scale=2;$tsum/$#" | bc`
	echo "max number is:$max"
	echo "min number is:$min"
	echo "average is:$aver"
else
	echo 'warning: not enough numbers, at least 3 numbers.'
	exit 0
fi	
exit 0

